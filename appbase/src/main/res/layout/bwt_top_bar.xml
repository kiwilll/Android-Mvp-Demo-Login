<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dip">

    <ImageView
        android:id="@+id/iv_topbar_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/bwt_ic_header_back" />

    <TextView
        android:id="@+id/tv_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="220dip"
        android:text=""
        android:textColor="@color/bwt_title_center_text"
        android:textSize="18sp"
        tools:text="标题" />

    <com.bwton.metro.uikit.loading.LoadingView
        android:id="@+id/loadingview_topbar_loading"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dip"
        android:layout_toLeftOf="@id/tv_topbar_title"
        android:visibility="gone"
        app:loadingColor="#ffffffff" />

    <LinearLayout
        android:id="@+id/ll_topbar_rightcontianer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_topbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="48dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/bwt_title_right_text"
            android:textSize="14sp"
            tools:text="更多" />

    </LinearLayout>

    <View
        android:id="@+id/view_topbar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="#F7F7F7" />

</RelativeLayout>