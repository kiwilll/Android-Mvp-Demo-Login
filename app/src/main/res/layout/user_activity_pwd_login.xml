<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bwt_background_color"
    android:orientation="vertical">

    <com.hw.mvpbase.uikit.BwtTopBarView
        android:id="@+id/topbar_header"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        app:titleText="@string/user_login"
        />

    <com.hw.mvpbase.uikit.BwtMaterialEditText
        android:id="@+id/dl_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:paddingRight="6dip"
        android:textSize="14sp"
        android:textColorHint="@color/bwt_edittext_hint"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="11"
        app:met_iconPadding="0dp"
        app:met_primaryColor="@color/bwt_primary_ui_color" />

    <com.hw.mvpbase.uikit.BwtMaterialEditText
        android:id="@+id/dl_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:paddingRight="6dip"
        android:textSize="14sp"
        android:textColorHint="@color/bwt_edittext_hint"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="32"
        android:maxLines="1"
        app:met_iconPadding="0dp"
        app:met_primaryColor="@color/bwt_primary_ui_color" />

    <Button
        android:id="@+id/dl_btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bwt_btn_main"
        android:enabled="false"
        android:text="登  录"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <View
        android:layout_width="1px"
        android:layout_height="0px"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dl_tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginLeft="32dp"
            android:text="注册账号"
            android:textColor="@color/bwt_sel_primary_text"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dl_tv_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginRight="32dp"
            android:text="找回密码"
            android:textColor="@color/bwt_sel_primary_text"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>


</LinearLayout>